package com.LeShine.test2;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

/**
 * @author LeShine
 * @date: 2018年8月22日 下午8:58:42
 * @version: v1.0.0
 * @explain:序列化与反序列化
 */
public class ObjectOutputTest {
	public static void main(String[] args) {
		SerializableT();
	}

	/**
	 * 
	 */
	private void serialableT() {
		// TODO Auto-generated method stub
		Student student = new Student("LeShine", 18);
		// 新建一个输出对象
		File fiS = new File("E:\\bigdata\\exercise\\student");
		ObjectOutputStream oos = null;
		try {
			// 通过构造fileOutputStream对象，将对象作为一个文件
			oos = new ObjectOutputStream(new FileOutputStream(fiS));
			// 将对象写出
			oos.writeObject(student);
			oos.flush();

		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			try {
				if (oos != null) {
					oos.close();
				}

			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
}
